<h1 class="title">
  <%= @album.title %>
</h1>
<p>
  <%= link_to 'Play on Sonos', play_album_path(@album), class: 'button is-primary' %>
</p>
<p>
  <% SonosSystem.order(:name).each do |sonos_system| %>
    <%= link_to "Play on #{sonos_system.name}", play_album_path(@album, sonos_system_id: sonos_system.id), class: 'button is-primary is-outlined is-small' %>
  <% end %>
</p>
<figure class="image">
  <%= image_tag @album.get_artwork, alt: @album.title %>
</figure>
<h3>Tracks</h3>
<ol>
  <% @album.titles.each do |title| %>
  <li>
    <%= title.title %>
  </li>
  <% end %>
</ol>

<%= link_to 'Edit', edit_album_path(@album) %> |
<%= link_to 'Back', albums_path %>
